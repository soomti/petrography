<section>
    <div class="col-md-12 no-padding">
        <div class="filter-content overflow-hidden">
          <ul class="portfolio-grid portfolio-metro-grid work-3col hover-option10 gutter-medium lightbox-portfolio">
            <li class="grid-sizer"></li>
            <% @boards.each do |board|%>
              <li class="grid-item <%= board.category %> wow zoomIn" data-wow-delay="0.2s">
                <figure>
                  <div class="portfolio-img bg-black"><img src="<%= image_path(board.image) %>" alt=""/></div>
                  <figcaption>
                    <div class="portfolio-hover-main2">
                       <div class="portfolio-hover-content">
                          <span class="line-height-normal alt-font text-white text-uppercase margin-5px-bottom display-block"><%= board.category %></span>
                        </div>
                        <div class="portfolio-icon">
                          <a class="gallery-link" title="<%= board.user.nickname %>" href="<%= image_path(board.image) %>">
                            <i class="fas fa-heart" aria-hidden="true"></i>
                          </a>
                          <a class="gallery-link" href="#">
                            <i class="fas fa-bookmark" aria-hidden="true"></i>
                          </a>
                        </div>
                        <div class="portfolio-hover-content">
                          @<%=board.user.nickname%>
                        </div>
                      </div>
                  </figcaption>
                </figure>
              </li>
            <%end%>
          </ul>
        </div>
      </div>
    </div>
</section>
<style>
.portfolio-hover-main2 {
  display: flex;
  height: 100%;
  justify-content: space-between;
  align-items: center;
  flex-direction: column;
  padding: 5%;
}
</style>