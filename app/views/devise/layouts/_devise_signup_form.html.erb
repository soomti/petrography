
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "big-input"%>
  </div>
  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "password", class: "big-input" %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "password-confirm" , class: "big-input"%>
  </div>
  <div class="field">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname, autocomplete: "nick-name" , class: "big-input"%>
  </div>
  <div class="field">
    <%= f.label :url %><br />
    <%= f.text_field :url, autocomplete: "동물 sns 계정이 있다면 입력해 주세요 (url)" , class: "big-input"%>
  </div>
  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-black btn-extra-large width-100 md-padding-15px-bottom sm-display-table sm-margin-lr-auto",style: "width:100%;" %>
  </div>
<% end %>
